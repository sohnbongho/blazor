@page "/Products/Details/{ProductId:int}"
@*@attribute [AllowAnonymous]*@
@attribute [Authorize(Roles = "Administrators")]

<h3>Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@Product.ProductId" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblModelName" class="col-sm-2 col-form-label">Product Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblModelName" value="@Product.ModelName" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblModelNumber" class="col-sm-2 col-form-label">Model Number: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblModelNumber" value="@Product.ModelNumber" />
            </div>
        </div>
        <div class="form-group">
            <a href="/Products/Edit/@Product.ProductId" class="btn btn-primary">Edit</a>
            <a href="/Products/Delete/@Product.ProductId" class="btn btn-danger">Delete</a>
            <a href="/Products" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>
