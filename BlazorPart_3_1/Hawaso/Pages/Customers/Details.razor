@page "/Customers/Details/{CustomerId:int}"

@*@attribute [AllowAnonymous]*@
@attribute [Authorize(Roles = "Administrators")]


<h3>Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@customer.CustomerId" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblCustomerName" class="col-sm-2 col-form-label">Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblCustomerName" value="@customer.CustomerName" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblEmail" class="col-sm-2 col-form-label">Email: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblEmail" value="@customer.EmailAddress" />
            </div>
        </div>
        <div class="form-group">
            <a href="/Customers/Edit/@customer.CustomerId" class="btn btn-primary">Edit</a>
            <a href="/Customers/Delete/@customer.CustomerId" class="btn btn-danger">Delete</a>
            <a href="/Customers" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>
