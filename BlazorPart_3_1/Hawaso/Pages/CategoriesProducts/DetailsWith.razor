@page "/CategoriesProducts/DetailsWith/{CategoryId:int}"

@attribute [Authorize(Roles = "Administrators")]

@using Hawaso.Pages.Products.Components

<h3>Details</h3>

<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="id" value="@category.CategoryId" />
            </div>
        </div>
        <div class="form-group row">
            <label for="lblCustomerName" class="col-sm-2 col-form-label">Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="lblCustomerName" value="@category.CategoryName" />
            </div>
        </div>
        <div class="form-group">
            <a href="/CategoriesProducts" class="btn btn-secondary">List</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <ManageBy CategoryId="CategoryId"></ManageBy>
    </div>
</div>
