@page "/Articles/Create"

@using ArticleApp.Models.Articles

@inject NavigationManager NavigationManager
@inject IArticleRepository ArticleRepository

<h3>Create</h3>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <EditForm Model="Model" OnValidSubmit="HandleValidSubmit" FormName="CreateArticleForm">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <ValidationSummary></ValidationSummary>
                <div class="form-group">
                    <label for="Title">Title</label>
                    <InputText id="txtTitle" class="form-control" placeholder="Enter Title"
                               @bind-Value="@Model.Title"></InputText>
                    <ValidationMessage For="@(() => Model.Title)"></ValidationMessage>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/Articles" class="btn btn-secondary">List</a>
            </EditForm>
        </div>
    </div>
</div>

@code {
    public Article Model { get; set; } = new Article();

    private async Task HandleValidSubmit()
    {
        await ArticleRepository.AddArticleAsync(Model);
        NavigationManager.NavigateTo("/Articles");
    }
}
